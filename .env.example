# Environment variables for production deployment

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=<change-me>

# Application Configuration
PORT=8080

# Keycloak OIDC
OIDC_AUTH_SERVER_URL=https://keycloak.your-domain.com/realms/cx-invest
OIDC_CLIENT_ID=cx-invest-backend
OIDC_CLIENT_SECRET=<generate-in-keycloak>

# OpenTelemetry
OTEL_ENDPOINT=http://otel-collector:4317

# CORS (if needed)
CORS_ORIGINS=https://your-frontend-domain.com

# Database (if using PostgreSQL for Keycloak)
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=<change-me>
